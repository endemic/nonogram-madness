<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ganbarugames.nonogramjs" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Nonogram Madness</name>
    <description>
        Japanese logic puzzles.
    </description>
    <author email="ndemick@gmail.com" href="http://ganbarugames.com">
        Ganbaru Games
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="FadeSplashScreen" value="false" />
    <preference name="ShowSplashScreenSpinner" value="false"/>

    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />

        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="resources/ios/Icon-60@3x.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="resources/ios/Icon-60.png" width="60" height="60" />
        <icon src="resources/ios/Icon-60@2x.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="resources/ios/Icon-76.png" width="76" height="76" />
        <icon src="resources/ios/Icon-76@2x.png" width="152" height="152" />
        <!-- iOS 6.1 -->
        <!-- Spotlight Icon -->
        <icon src="resources/ios/Icon-40.png" width="40" height="40" />
        <icon src="resources/ios/Icon-40@2x.png" width="80" height="80" />
        <!-- iPhone / iPod Touch -->
        <!-- <icon src="resources/ios/Icon.png" width="57" height="57" /> -->
        <icon src="resources/ios/Icon@2x.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="resources/ios/Icon-72.png" width="72" height="72" />
        <icon src="resources/ios/Icon-72@2x.png" width="144" height="144" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="resources/ios/Icon-Small.png" width="29" height="29" />
        <icon src="resources/ios/Icon-Small@2x.png" width="58" height="58" />
        <icon src="resources/ios/Icon-Small@3x.png" width="87" height="87" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="resources/ios/Icon-50.png" width="50" height="50" />
        <icon src="resources/ios/Icon-50@2x.png" width="100" height="100" />

        <!-- images are determined by width and height. The following are supported -->
        <splash src="resources/ios/Default~iphone.png" width="320" height="480"/>
        <splash src="resources/ios/Default@2x~iphone.png" width="640" height="960"/>
        <splash src="resources/ios/Default-Portrait~ipad.png" width="768" height="1024"/>
        <splash src="resources/ios/Default-Portrait@2x~ipad.png" width="1536" height="2048"/>
        <splash src="resources/ios/Default-Landscape~ipad.png" width="1024" height="768"/>
        <splash src="resources/ios/Default-Landscape@2x~ipad.png" width="2048" height="1536"/>
        <splash src="resources/ios/Default-568h@2x~iphone.png" width="640" height="1136"/>
        <splash src="resources/ios/Default-667h.png" width="750" height="1334"/>
        <splash src="resources/ios/Default-736h.png" width="1242" height="2208"/>
        <splash src="resources/ios/Default-Landscape-736h.png" width="2208" height="1242"/>
    </platform>
</widget>
