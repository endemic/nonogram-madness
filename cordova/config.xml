<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ganbarugames.nonogram" version="1.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Nonograms</name>
    <description>
        Japanese logic puzzles.
    </description>
    <author email="ndemick@gmail.com" href="http://ganbarugames.com">
        Ganbaru Games
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <preference name="Fullscreen" value="true" />

    <!-- https://github.com/apache/cordova-plugin-splashscreen -->
    <preference name="SplashScreen" value="screen" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="FadeSplashScreen" value="false" />
    <preference name="FadeSplashScreenDuration" value="0"/>
    <preference name="ShowSplashScreenSpinner" value="false"/>
    <!-- Android-specific config -->
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="true" />

    <platform name="android">
        <allow-intent href="market:*" />

        <allow-navigation href="market:*" />
        <allow-navigation href="http://play.google.com/*" />

        <icon src="resources/icons/android/ldpi.png" density="ldpi" />
        <icon src="resources/icons/android/mdpi.png" density="mdpi" />
        <icon src="resources/icons/android/hdpi.png" density="hdpi" />
        <icon src="resources/icons/android/xhdpi.png" density="xhdpi" />
        <icon src="resources/icons/android/xxhdpi.png" density="xxhdpi" />
        <icon src="resources/icons/android/xxxhdpi.png" density="xxxhdpi" />

        <!-- you can use any density that exists in the Android project -->
        <splash src="resources/splashscreens/android/splash-land-hdpi.png" density="land-hdpi"/>
        <splash src="resources/splashscreens/android/splash-land-ldpi.png" density="land-ldpi"/>
        <splash src="resources/splashscreens/android/splash-land-mdpi.png" density="land-mdpi"/>
        <splash src="resources/splashscreens/android/splash-land-xhdpi.png" density="land-xhdpi"/>
        <splash src="resources/splashscreens/android/splash-land-xxhdpi.png" density="land-xxhdpi"/>
        <splash src="resources/splashscreens/android/splash-land-xxxhdpi.png" density="land-xxxhdpi"/>

        <splash src="resources/splashscreens/android/splash-port-hdpi.png" density="port-hdpi"/>
        <splash src="resources/splashscreens/android/splash-port-ldpi.png" density="port-ldpi"/>
        <splash src="resources/splashscreens/android/splash-port-mdpi.png" density="port-mdpi"/>
        <splash src="resources/splashscreens/android/splash-port-xhdpi.png" density="port-xhdpi"/>
        <splash src="resources/splashscreens/android/splash-port-xxhdpi.png" density="port-xxhdpi"/>
        <splash src="resources/splashscreens/android/splash-port-xxxhdpi.png" density="port-xxxhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <allow-navigation href="itms:*" />
        <allow-navigation href="itms-apps:*" />

        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="resources/icons/ios/Icon-60@3x.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="resources/icons/ios/Icon-60.png" width="60" height="60" />
        <icon src="resources/icons/ios/Icon-60@2x.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="resources/icons/ios/Icon-76.png" width="76" height="76" />
        <icon src="resources/icons/ios/Icon-76@2x.png" width="152" height="152" />
        <!-- iOS 6.1 -->
        <!-- Spotlight Icon -->
        <icon src="resources/icons/ios/Icon-40.png" width="40" height="40" />
        <icon src="resources/icons/ios/Icon-40@2x.png" width="80" height="80" />
        <!-- iPhone / iPod Touch -->
        <!-- <icon src="resources/icons/ios/Icon.png" width="57" height="57" /> -->
        <icon src="resources/icons/ios/Icon@2x.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="resources/icons/ios/Icon-72.png" width="72" height="72" />
        <icon src="resources/icons/ios/Icon-72@2x.png" width="144" height="144" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="resources/icons/ios/Icon-Small.png" width="29" height="29" />
        <icon src="resources/icons/ios/Icon-Small@2x.png" width="58" height="58" />
        <icon src="resources/icons/ios/Icon-Small@3x.png" width="87" height="87" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="resources/icons/ios/Icon-50.png" width="50" height="50" />
        <icon src="resources/icons/ios/Icon-50@2x.png" width="100" height="100" />

        <!-- images are determined by width and height. The following are supported -->
        <splash src="resources/splashscreens/ios/Default~iphone.png" width="320" height="480"/>
        <splash src="resources/splashscreens/ios/Default@2x~iphone.png" width="640" height="960"/>
        <splash src="resources/splashscreens/ios/Default-Portrait~ipad.png" width="768" height="1024"/>
        <splash src="resources/splashscreens/ios/Default-Portrait@2x~ipad.png" width="1536" height="2048"/>
        <splash src="resources/splashscreens/ios/Default-Landscape~ipad.png" width="1024" height="768"/>
        <splash src="resources/splashscreens/ios/Default-Landscape@2x~ipad.png" width="2048" height="1536"/>
        <splash src="resources/splashscreens/ios/Default-568h@2x~iphone.png" width="640" height="1136"/>
        <splash src="resources/splashscreens/ios/Default-667h.png" width="750" height="1334"/>
        <splash src="resources/splashscreens/ios/Default-736h.png" width="1242" height="2208"/>
        <splash src="resources/splashscreens/ios/Default-Landscape-736h.png" width="2208" height="1242"/>
    </platform>
</widget>
