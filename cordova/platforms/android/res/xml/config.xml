<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ganbarugames.nonogram" version="1.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <allow-intent href="market:*" />
    <allow-navigation href="market:*" />
    <allow-navigation href="http://play.google.com/*" />
    <icon density="ldpi" src="resources/icons/android/ldpi.png" />
    <icon density="mdpi" src="resources/icons/android/mdpi.png" />
    <icon density="hdpi" src="resources/icons/android/hdpi.png" />
    <icon density="xhdpi" src="resources/icons/android/xhdpi.png" />
    <icon density="xxhdpi" src="resources/icons/android/xxhdpi.png" />
    <icon density="xxxhdpi" src="resources/icons/android/xxxhdpi.png" />
    <splash density="land-hdpi" src="resources/splashscreens/android/splash-land-hdpi.png" />
    <splash density="land-ldpi" src="resources/splashscreens/android/splash-land-ldpi.png" />
    <splash density="land-mdpi" src="resources/splashscreens/android/splash-land-mdpi.png" />
    <splash density="land-xhdpi" src="resources/splashscreens/android/splash-land-xhdpi.png" />
    <splash density="land-xxhdpi" src="resources/splashscreens/android/splash-land-xxhdpi.png" />
    <splash density="land-xxxhdpi" src="resources/splashscreens/android/splash-land-xxxhdpi.png" />
    <splash density="port-hdpi" src="resources/splashscreens/android/splash-port-hdpi.png" />
    <splash density="port-ldpi" src="resources/splashscreens/android/splash-port-ldpi.png" />
    <splash density="port-mdpi" src="resources/splashscreens/android/splash-port-mdpi.png" />
    <splash density="port-xhdpi" src="resources/splashscreens/android/splash-port-xhdpi.png" />
    <splash density="port-xxhdpi" src="resources/splashscreens/android/splash-port-xxhdpi.png" />
    <splash density="port-xxxhdpi" src="resources/splashscreens/android/splash-port-xxxhdpi.png" />
    <name>Nonogram Madness</name>
    <description>
        Japanese logic puzzles.
    </description>
    <author email="ndemick@gmail.com" href="http://ganbarugames.com">
        Ganbaru Games
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="SplashScreen" value="screen" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="FadeSplashScreen" value="false" />
    <preference name="FadeSplashScreenDuration" value="0" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="true" />
</widget>
